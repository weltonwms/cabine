<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset  addfieldpath="/administrator/components/com_concursos/models/fields">
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="sigla"
                                id="sigla"
				type="text"
				label="Sigla"
				description="Sigla da ICA"
				required="true"
                                class="required"
				/>
                <field
				name="arquivo"
                                id="arquivo"
				type="uploadfile"
				label="Arquivo"
				description="Caminho para o  arquivo da ICA"
				class="required"
                                
				/>
                <field
				name="descricao"
                                id="descricao"
				type="text"
				label="Descrição"
				description="Descrição"
				required="true"
                                class="required"
				/>
                <field
				name="referencia"
                                id="referencia"
				type="list"
				label="Referência"
				description="Referência da ICA"
				required="true"
                                class="required"
				>
                     <option value="">--Selecione--</option>
                    <option value="1">Inspeção de Saúde</option>
                    <option value="2">Exames Psicológicos</option>
                    <option value="3">TACF</option>
                </field>
                <field
				name="data"
                                id="data"
				type="calendar"
				label="Data"
				description="Data de Publicação da ICA"
                                required="true"
                                class="required"
				/>
                
               
	</fieldset>
</form>