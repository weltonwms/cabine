            description="DESCRIÇÃO"
            query="SELECT ID, sigla  FROM #__concursos_icas WHERE referencia=1"
            key_field="ID"
            value_field="sigla"
        >
               
            <option value="">--Selecione--</option>
        </field>
        <field
            name="ica_psicologico"
            id="ica_psicologico"
            type="sql"
            label="ICA Exames Psicológicos"
