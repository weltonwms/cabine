            query="SELECT ID, sigla  FROM #__concursos_icas WHERE referencia=2"
            key_field="ID"
            value_field="sigla"
        >
               
            <option value="">--Selecione--</option>
        </field>
        <field
            name="ica_tacf"
            id="ica_tacf"
            type="sql"
            label="ICA TACF"
            description="Descrição"
            query="SELECT ID, sigla  FROM #__concursos_icas WHERE referencia=3"
            key_field="ID"
            value_field="sigla"
