  <description>Componente para divulgação de Concursos</description>

    <install>
        <sql>
            <file charset="utf8" driver="mysql">install/installsql.mysql.utf8.php</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file charset="utf8" driver="mysql">install/uninstallsql.mysql.utf8.php</file>
        </sql>
    </uninstall>

    <languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.com_concursos.ini</language>
    </languages>

  <files folder="site">
    <file>controller.php</file>
    <file>concursos.php</file>

    <folder>assets</folder>
    <folder>controllers</folder>
    <folder>helpers</folder>
    <folder>models</folder>
    <folder>views</folder>
  </files>

    <administration>
    <menu>Concursos</menu>

    <submenu>
      <menu link='option=com_concursos&amp;view=icas&amp;layout=list'>icas</menu>
      <menu link='option=com_concursos&amp;view=concurso&amp;layout=list'>concurso</menu>
    </submenu>


        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_concursos.ini</language>
        </languages>

        <files folder="admin">
      <file>config.xml</file>
      <file>access.xml</file>
      <file>controller.php</file>
      <file>concursos.php</file>

      <folder>assets</folder>
